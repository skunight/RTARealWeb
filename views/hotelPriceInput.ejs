<script>
    $(document).ready(function() {
        $('#isEnable').bootstrapSwitch();
    } );
    var nowTime = new Date();
    //search start Date
    $('#searchStartDate').datetimepicker({
        language:'zh-CN',
        weekStart: 0,
        todayBtn:  0,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    $('#searchStartDate').datetimepicker("setStartDate",formatDate(nowTime));
    //search end Date
    $('#searchEndDate').datetimepicker({
        language:'zh-CN',
        weekStart: 0,
        todayBtn:  0,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        minView: 2,
        forceParse: 0
    });
    //set end Date start and end
    $('#searchEndDate').datetimepicker("setStartDate",formatDate(nowTime));
    nowTime.setFullYear(nowTime.getFullYear()+1);
    $('#searchEndDate').datetimepicker("setEndDate",formatDate(nowTime));
    //set paginator
    refreshPaginator(<%=currentPage%>,<%=totalPage%>);
</script>

