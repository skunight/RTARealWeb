<div class="modal fade" id="addHotelPriceModal" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">新增优惠券价格记录</h4>
                </div>
                <form role="form" class="form-horizontal" id="addForm">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="city" class="col-md-2 control-label">城市</label>
                            <div class="col-md-4">
                                <select class="form-control" id="city" required>
                                        <option id="">请选择城市</option>
                                    <%citys.forEach(function(obj){%>
                                        <option id="<%=obj._id%>"><%=obj.name%></option>
                                    <%});%>
                                </select>
                            </div>
                            <label for="name" class="col-md-2 control-label">产品名称</label>
                            <div class="col-md-4"><input type="text" class="form-control" placeholder="请输入产品名称" id="name" required></div>
                        </div>


                        <div class="form-group">
                            <label for="startDate" class="col-md-2 control-label">有效期</label>
                            <div class="col-md-4"><input type="text" class="form-control" placeholder="有效期开始" id="startDate" required></div>
                            <div class="col-md-1">~~</div>
                            <div class="col-md-4"><input type="text" class="form-control" placeholder="有效期结束" id="endDate" required></div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" >价格类型</label>
                            <label class="col-md-2 col-md-offset-0 control-label" >周中</label>
                            <label class="col-md-2 col-md-offset-2 control-label" >周末</label>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="cost">底价</label>
                            <div class="col-md-4"><input type="text" class="form-control" id="cost" required></div>
                            <div class="col-md-4"><input type="text" class="form-control" id="costWeekend" required></div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="price">卖价</label>
                            <div class="col-md-4"><input type="text" class="form-control" id="price" required></div>
                            <div class="col-md-4"><input type="text" class="form-control" id="priceWeekend" required></div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="packagePrice">打包价</label>
                            <div class="col-md-4"><input type="text" class="form-control" id="packagePrice" required></div>
                            <div class="col-md-4"><input type="text" class="form-control" id="packagePriceWeekend" required></div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="marketPrice">市场价</label>
                            <div class="col-md-4"><input type="text" class="form-control" id="marketPrice" required></div>
                            <div class="col-md-4"><input type="text" class="form-control" id="marketPriceWeekend" required></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="inventory" >库存</label>
                            <div class="col-md-4"><input type="text" class="form-control" id="inventory" required></div>
                            <div class="col-md-3"><input type="text" class="form-control" id="inventoryWeekend" required></div>
                            <div class="col-md-3">
                                <select class="form-control" id="inventoryType" required>
                                    <option value="0">单日</option>
                                    <option value="1">总量</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" >周末定义</label>
                            <label class="col-md-2 checkbox-inline">
                                周一<input type="checkbox" name="ckWeek">
                            </label>
                            <label class="col-md-2 checkbox-inline">
                                周二<input type="checkbox" name="ckWeek">
                            </label>
                            <label class="col-md-2 checkbox-inline">
                                周三<input type="checkbox" name="ckWeek">
                            </label>
                            <label class="col-md-2 checkbox-inline">
                                周四<input type="checkbox" name="ckWeek">
                            </label>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-md-offset-2 checkbox-inline">
                                周五<input type="checkbox" name="ckWeek">
                            </label>
                            <label class="col-md-2 checkbox-inline">
                                周六<input type="checkbox" name="ckWeek" checked>
                            </label>
                            <label class="col-md-2 checkbox-inline">
                                周日<input type="checkbox" name="ckWeek" checked>
                            </label>
                        </div>

                        <div class="form-group">
                            <label for="providerInfo" class="col-md-2 control-label">供应商</label>
                            <div class="col-md-10">
                                <select class="form-control" id="provider"  name="provider" required>
                                    <option value="">请选择所属供应商</option>
                                    <%providerNames.forEach(function(p){%>
                                    <option value="<%=p._id%>"><%=p.name%></option>
                                    <%});%>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="providerInfo" class="col-md-2 control-label">操作员</label>
                            <div class="col-md-10"><input type="text" class="form-control" readonly></div>
                        </div>



                    </div>
                </form>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" id="createVoture">保存</button>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->




