<div class="page-container">
    <div class="row">

        <%include modules%>

        <div class="col-md-10">
            <div class="row">
                <!--这一部分为查询栏-->
                <div class="col-md-12">
                    <form class="form-horizontal" role="form" method="GET" id="queryForm">
                        <div class="form-group">
                            <label class="control-label col-md-1" for="searchEffect">发布日期：</label>
                            <div class="col-md-2">
                                <input type="text" id="searchEffect" name="searchEffect" class="form-control date" readonly>
                            </div>
                            <span class="col-md-1">~~</span>
                            <div class="col-md-2">
                                <input type="text" id="searchExpiry" name="searchExpiry" class="form-control date" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1" for="searchIsEnable">是否有效：</label>
                            <div class="col-md-2">
                                <select id="searchStatus" name="searchStatus" class="form-control" >
                                    <option value="">所有</option>
                                    <option value="0">已拒绝</option>
                                    <option value="1">待审核</option>
                                    <option value="2">已上线</option>
                                    <option value="3">已下线</option>
                                </select>
                            </div>
                            <div class="col-md-1 col-md-offset-1">
                                <button id="query" class="btn btn-danger form-control" type="submit">查询</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>



            <div class="row">
                <!--这一部分是按钮栏-->
                <div class="col-md-12">
                    <button type="button" class="btn bg-primary" data-toggle="modal" data-backdrop="static"  data-target="#createModal" id="showCreate">新闻公告发布</button>
                    <button type="button" class="btn bg-primary" data-toggle="modal"  id="showEdit">新闻公告编辑</button>
                </div>
            </div>
            <div class="row" id="queryResult">
                <!--这一部分是分页栏 以及 表格栏-->
            </div>
        </div>
    </div>
</div>

</body>




<div class="modal fade" id="createModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title"><span id="modalType"></span>新闻公告</h4>
            </div>
           <div class="modal-body">
             <form role="form" class="form-horizontal" id="modalForm">
                        <div class="form-group">
                            <label for="title" class="col-md-2 control-label">标题</label>
                            <div class="col-md-10">
                                <input type="text" class="form-control" placeholder="请输入标题" id="title" name="title" required  autofocus>
                            </div>
                        </div>
                         <div class="form-group">
                             <label for="content" class="col-md-2 control-label">公告类型</label>
                             <div class="col-md-10">
                                 <select name="type" id="type" class="form-control">
                                     <option value="0">政府公告</option>
                                 </select>
                             </div>
                         </div>
                        <div class="form-group">
                            <label for="content" class="col-md-2 control-label">正文</label>
                            <div class="col-md-10">
                                <textarea rows=30 class="form-control" placeholder="请输入正文" id="content" name="content" required></textarea>
                            </div>
                        </div>
             </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" id="doCreate">保存</button>
                </div>
                <input type="hidden" id="selectedId" name="selectedId" value="">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




