<div class="page-container">
    <div class="row">

        <include modules>

        <div class="col-md-10">
            <div class="row">
                <!--这一部分为查询栏-->
                <div class="col-md-12">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="control-label col-md-1" for="searchCity">城市：</label>
                            <div class="col-md-2">
                                <select id="searchCity" class="form-control">
                                    <%cityInfo.forEach(function(city){%>
                                    <option value="<%=city._id%>"><%=city.name%></option>
                                    <%});%>
                                </select>
                            </div>
                            <label class="control-label col-md-1" for="searchName">优惠券名称：</label>
                            <div class="col-md-2">
                                <input type="text" id="searchName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1" for="searchEffect">有效期：</label>
                            <div class="col-md-2">
                                <input type="text" id="searchEffect" class="form-control">
                            </div>
                            <span class="col-md-1">~~</span>
                            <div class="col-md-2">
                                <input type="text" id="searchExpiry" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-1" for="searchisEnable">是否有效：</label>
                            <div class="col-md-2">
                                <select id="searchisEnable" class="form-control" >
                                    <option value="true">有效</option>
                                    <option value="false">无效</option>
                                </select>
                            </div>
                            <div class="col-md-1 col-md-offset-1">
                                <button id="query" class="btn btn-danger form-control">查询</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>



            <div class="row">
                <!--这一部分是按钮栏-->
                <div class="col-md-12">
                    <button type="button" class="btn bg-primary" data-toggle="modal" data-backdrop="static"  data-target="#createModal" id="showCreate">新增优惠券信息</button>
                    <button type="button" class="btn bg-primary" data-toggle="modal"  id="showEdit">编辑优惠券信息</button>
                </div>
            </div>
            <div class="row">
                <!--这一部分是分页栏 以及 表格栏-->
                <div class="col-md-12">
                    <ul class="pagination">
                        <li><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=1">首页</a></li>
                        <li class="<%=pageInfo[20].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&isPre=1&current=<%=pageInfo[20].page%>">上一页</a></li>
                        <li class="<%=pageInfo[0].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=<%=pageInfo[0].page%>"><%=pageInfo[0].page%></a></li>
                        <li class="<%=pageInfo[1].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=<%=pageInfo[1].page%>"><%=pageInfo[1].page%></a></li>
                        <li class="<%=pageInfo[2].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=<%=pageInfo[2].page%>"><%=pageInfo[2].page%></a></li>
                        <li class="<%=pageInfo[3].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=<%=pageInfo[3].page%>"><%=pageInfo[3].page%></a></li>
                        <li class="<%=pageInfo[4].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=<%=pageInfo[4].page%>"><%=pageInfo[4].page%></a></li>
                        <li class="<%=pageInfo[21].class%>"><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&isNext=1&current=<%=pageInfo[21].page%>">下一页</a></li>
                        <li><a href="/votureManagement?startPage=<%=pageInfo[0].page%>&current=<%=pageInfo[22].totalPage%>">末页</a></li>
                    </ul>

                    <table id="provider" class="myTable table table-bordered"  width="100%">
                    <thead>
                        <tr>
                            <th>优惠券名称</th>
                            <th>城市</th>
                            <th>推荐级别</th>
                            <th>有效期开始</th>
                            <th>有效期结束</th>
                            <th>创建时间</th>
                            <!--<th>产品子类</th>-->
                            <th>是否有效</th>
                        </tr>
                    </thead>
                    <tbody>
                    <%data.forEach(function(obj){%>
                        <tr id="<%=obj._id%>">
                                <td><%=obj.name%></td>
                                <td><%=obj.city.name%></td>
                                <td><%=obj.level%></td>
                                <td><%=new Date(obj.effectDate).Format("yyyy-MM-dd")%></td>
                                <td><%=new Date(obj.expiryDate).Format("yyyy-MM-dd")%></td>
                                <td><%=new Date(obj.createTime).Format("yyyy-MM-dd")%></td>
                                <!--<td><%=obj.subType%></td>-->
                                <td><%=obj.isEnable%></td>
                         </tr>
                    <% })%>
                    </tbody>
                 </table>
                </div>
            </div>
